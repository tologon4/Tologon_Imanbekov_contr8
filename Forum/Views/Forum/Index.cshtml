@model List<ForumTitle>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<div class="text-center">
    <h1 class="mx-auto"> Темы </h1>
</div>
<div class="table_section mt-4">
    @if (@Model.Count == 0)
    {
        <p>Пока что, животных еще нет!</p>
    }
    else
    {
        <table class="table table-primary table-striped">
            <thead>
                <tr>
                    <th>Основная тема</th>
                    <th>Дата добавления</th>
                    <th>Автор</th>
                    <th>Ответы</th>
                </tr>            
            </thead>
            <tbody>
            @foreach (var title in @Model)
            {
                <tr>
                    <td><a asp-action="Details" asp-controller="Forum" asp-route-id=@title.Id class="nav-link text-dark">@title.Title</a></td>
                    <td><a asp-action="Details" asp-controller="Forum" asp-route-id=@title.Id class="nav-link text-dark">@title.CreatedTime</a></td>
                    <td><a asp-action="Details" asp-controller="Forum" asp-route-id=@title.Id class="nav-link text-dark">@title.User.UserName</a></td>
                    <td><a asp-action="Details" asp-controller="Forum" asp-route-id=@title.Id class="nav-link text-dark">@title.AnswersCount</a></td>
                </tr>
            }            
            </tbody>
        </table>
    }
</div>
